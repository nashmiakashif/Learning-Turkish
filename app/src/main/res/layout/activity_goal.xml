<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goal"
    android:background="@drawable/bg_login"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     Pick a Goal"
        android:background="@color/orange"
        android:drawableLeft="@drawable/goal2"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:id="@+id/t"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:background="@color/orange"
        android:padding="11dp"
        android:layout_margin="20dp"
        android:rowCount="7"
        android:layout_below="@+id/t"
        >

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|end|fill_horizontal"
            android:background="@color/purple"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/pointer"
            android:onClick="next"

            android:text="Casual        5 Minutes a day"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/purple"
            android:selectAllOnFocus="true"
            android:onClick="next"
            android:drawableLeft="@drawable/pointer"
            android:id="@+id/t2"
            android:text="Regular      10 Minutes a day"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/purple"
            android:id="@+id/t3"
            android:onClick="next"
            android:drawableLeft="@drawable/pointer"
            android:text="Serious       15 Minutes a day"
            android:textSize="22dp"

            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insane         20 Minutes a day"
            android:id="@+id/t4"
            android:background="@color/purple"
            android:onClick="next"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/pointer"
            android:textSize="22dp"
            android:textStyle="bold" />

    </GridLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:paddingBottom="24dp" />

</RelativeLayout>
